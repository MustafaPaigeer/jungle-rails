<h1>Jungle Signup</h1>

<div class="well">
<%= form_for :user, url: '/users' do |u| %>

    <div class="form-group row">

    <div class="form-group">
      <%= u.label :FirstName %>
      <%= u.text_field :first_name %>
    </div>
    <div class="form-group">
    <%= u.label :LastName %>
    <%= u.text_field :last_name %>
  
    <div class="form-group">
      <%= u.label :email %>
      <%= u.text_field :email %>
    </div>
    <div class="form-group">
      <%= u.label :password %>
      <%= u.password_field :password %>
    </div>
    <div class="form-group">
      <%= u.label :password_confirmation %>
      <%= u.password_field :password_confirmation %>
    </div>
    <%= u.submit "Submit", class: 'btn btn-info' %>

<% end %>

</div>